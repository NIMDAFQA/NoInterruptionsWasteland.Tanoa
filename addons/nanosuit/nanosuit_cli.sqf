////////////////////////////////////////////////////////////////////////////////////////////////////////////
//										Sets textures for nanosuit
////////////////////////////////////////////////////////////////////////////////////////////////////////////
[] spawn
{
	while {true} do 
	{
		if((uniform player == "U_B_Protagonist_VR") || (uniform player == "U_O_Protagonist_VR") || (uniform player == "U_I_Protagonist_VR")) then
		{
			player setObjectTextureGlobal [0,'#(argb,8,8,3)color(0,0,0,1)'];
			player setObjectTextureGlobal [1,'addons\nanosuit\honeycomb.jpg'];
			player setObjectTextureGlobal [2,'addons\nanosuit\honeycomb.jpg'];
		};
	};
};
